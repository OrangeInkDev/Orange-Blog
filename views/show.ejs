<div class="container pt-5 " style="color: white;">
    <h1>Blog Title</h1>
</div>


<section id="authorDetails">
    <div class="container pt-5">
        <div class="row ">
            <div class="col-2 d-inline-flex">
                <img id="dp" width="100px" height="100px" style="object-fit: contain;" src="https://i.pinimg.com/originals/67/c1/32/67c132e245d09d290df7bfe4404bc0c5.png" class="rounded-circle" alt="waifu">
            </div>
            <div class="col ml-md-5 ml-lg-0  " id="authorId">
                
                <div class="row d-flex flex-row">
                    <h5>Kosaki Onodera</h5>
                </div>

                <div class="row d-flex flex-row " id="authorBio">
                    <p class="text-muted">Author Details</p>
                </div>

                <div class="row d-inline-flex date">
                    <div class="p-2 ">10:30</div>
                    <div class="p-2">|</div>
                    <div class="p-2">5 min read</div>
                </div>

                
            </div>
        </div>

    </div>
</section>

<section id="content">
    <div class="container">
        <div class="row pt-5">
            <img id="coverImg" src="<%= blog.image %>"
                alt="mac" width="100%" height="auto">
        </div>
        <div class="pt-5" id="writeUp"  style="width: 100%;" >
            <%= blog.content %>
        </div>
    </div>
</section>

<div class="d-flex align-items-start container my-3">
    <a href="/blog/<%= blog._id %>/edit"><button class="btn btn-outline-success">Edit</button></a>
<form class="delete-form" action="/blog/<%= blog._id %>?_method=DELETE" method="POST">
    <button class="btn btn-outline-danger ml-2">Delete</button>
</form>
</div>

